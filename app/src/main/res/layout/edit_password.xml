<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".ChangePasswordActivity">

    <!-- Tombol Kembali -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_arrow_left_circle_line"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/title_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Label Current Password -->
    <TextView
        android:id="@+id/label_current_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/title_change_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"/>

    <!-- Input Current Password -->
    <EditText
        android:id="@+id/input_current_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_edittext"
        android:hint="••••••••"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="91dp" />

    <!-- Icon Mata untuk Toggle Password -->
    <ImageView
        android:id="@+id/toggle_current_password"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_lock_2_fill"
        android:contentDescription="Show Password"
        app:layout_constraintEnd_toEndOf="@id/input_current_password"
        app:layout_constraintTop_toTopOf="@id/input_current_password"
        app:layout_constraintBottom_toBottomOf="@id/input_current_password"
        android:layout_marginEnd="16dp"/>

    <!-- Label New Password -->
    <TextView
        android:id="@+id/label_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/input_current_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"/>

    <!-- Input New Password -->
    <EditText
        android:id="@+id/input_new_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_edittext"
        android:hint="••••••••"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="184dp" />

    <!-- Icon Mata untuk Toggle New Password -->
    <ImageView
        android:id="@+id/toggle_new_password"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_lock_2_fill"
        android:contentDescription="Show Password"
        app:layout_constraintEnd_toEndOf="@id/input_new_password"
        app:layout_constraintTop_toTopOf="@id/input_new_password"
        app:layout_constraintBottom_toBottomOf="@id/input_new_password"
        android:layout_marginEnd="16dp"/>

    <!-- Label Confirm Password -->
    <TextView
        android:id="@+id/label_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/input_new_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"/>

    <!-- Input Confirm Password -->
    <EditText
        android:id="@+id/input_confirm_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_edittext"
        android:hint="••••••••"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="277dp" />

    <!-- Icon Mata untuk Toggle Confirm Password -->
    <ImageView
        android:id="@+id/toggle_confirm_password"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_lock_2_fill"
        android:contentDescription="Show Password"
        app:layout_constraintEnd_toEndOf="@id/input_confirm_password"
        app:layout_constraintTop_toTopOf="@id/input_confirm_password"
        app:layout_constraintBottom_toBottomOf="@id/input_confirm_password"
        android:layout_marginEnd="16dp"/>

    <!-- Tombol Save Password -->
    <Button
        android:id="@+id/btn_save_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Save Password"
        android:textStyle="bold"
        android:textColor="@color/dark_text_color"
        android:backgroundTint="@color/accent_color"
        app:layout_constraintTop_toBottomOf="@id/input_confirm_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
