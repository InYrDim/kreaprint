        <shape>
            <solid android:color="#0057FF"/> <!-- Warna biru lebih gelap saat ditekan -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#007AFF"/> <!-- Warna biru utama -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
